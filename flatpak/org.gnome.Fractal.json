{
    "app-id": "org.gnome.Fractal",
    "version": "master",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "fractal",
    "finish-args": ["--share=network", "--socket=x11", "--filesystem=host" ],
    "build-options" : {
        "env": {
            "CARGO_HOME": "/run/build/Fractal/cargo",
            "V": "1"
        },
        "build-args": [ "--share=network" ]
    },
    "modules": [
        {
           "name": "Fractal",
           "buildsystem": "simple",
           "build-commands": [
               "source /usr/lib/sdk/rust-stable/enable.sh && ./configure --prefix=/app && make && make install"
            ],
           "sources": [
               {
                   "type": "git",
                   "url": "https://gitlab.gnome.org/danigm/fractal.git",
                   "branch": "master"
               }
           ]
        }
    ]
}
